    # Normal notifications - main blue theme
    background = "#1e3a5f"
    foreground = "#e3f2fd"
    highlight = "#90caf9"
    frame_color = "#64b5f6"
    timeout = 6
    icon = dialog-information

[urgency_critical]
    # Critical notifications - red accent with blue background
    background = "#1e3a5f"
    foreground = "#ffffff"
    highlight = "#f44336"
    frame_color = "#f44336"
    timeout = 0
    icon = dialog-warning

